<h1> Resources</h1>

<div class="container">

    <% resources.forEach(resource => { %>

        <div class="cards">

            <div class="font"> <%=resource.name %> </div>
            <div class="links">
                <a class="pageButton" href="/">Edit</a>
                <form action="/<%= resource.id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="pageButton" />
            
                  </form>
            </div>
        </div>
    
    <% }) %>

</div>